<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/activity_background</item>

        <!-- fragment -->
        <item name="fragment_background">@drawable/activity_background</item>

        <!-- text -->
        <item name="text_primary_color">@color/light_black</item>

        <!-- image -->
        <item name="image_tint">@color/black</item>>
        <item name="image_swap_theme_tint">@color/gray</item>

        <!-- separate line -->
        <item name="separate_line_background">@color/light_grey_60</item>

        <!-- edit text -->
        <item name="edit_text_background_tint">@color/gray</item>
        <item name="edit_text_color_hint">@color/light_grey_60</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/light_black</item>

        <!-- fragment -->
        <item name="fragment_background">@color/light_black</item>

        <!-- text -->
        <item name="text_primary_color">@color/white_85</item>

        <!-- image -->
        <item name="image_tint">@color/white_85</item>>
        <item name="image_swap_theme_tint">@color/white_35</item>

        <!-- separate line -->
        <item name="separate_line_background">@color/gray</item>

        <!-- edit text -->
        <item name="edit_text_background_tint">@color/dark_grey</item>
        <item name="edit_text_color_hint">@color/white_35</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>